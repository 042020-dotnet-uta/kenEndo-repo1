@model Project1.Models.RegistrationModel

@{
    ViewData["Title"] = "Registration";
}

<h4 class="text-danger">@ViewData["Error"]</h4>
<h1>User Registration</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fName" class="control-label text-light"></label>
                <input asp-for="fName" class="form-control" />
                <span asp-validation-for="fName" class="text-danger font-weight-bold"></span>
            </div>
            <div class="form-group">
                <label asp-for="lName" class="control-label text-light"></label>
                <input asp-for="lName" class="form-control" />
                <span asp-validation-for="lName" class="text-danger font-weight-bold"></span>
            </div>
            <div class="form-group">
                <label asp-for="userName" class="control-label text-light"></label>
                <input asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger font-weight-bold"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label text-light"></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger font-weight-bold"></span>
            </div>
            <div class="form-group">
                <label asp-for="confirmPassword" class="control-label text-light"></label>
                <input asp-for="confirmPassword" class="form-control" />
                <span asp-validation-for="confirmPassword" class="text-danger font-weight-bold"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-light btn-outline-dark" />
                <input class="btn btn-light btn-outline-dark" type="button" value="Back" onclick="location.href='@Url.Action("Index","Welcome")'" />

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}