@model IEnumerable<Project1.Domain.StoreItem>

@{
    ViewData["Title"] = "Items";
}

<h1>Items</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.itemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.itemPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.itemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.itemPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StoreItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StoreItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StoreItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
